<h1>ツール投稿フォーム</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件エラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, method: :post do |f| %>
  <h4>ツール名</h4>
  <%= f.text_field :tool_name %>
  <h4>説明</h4>
  <%= f.text_area :tool_description %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>ジャンル</h4>
  <%= f.text_field :genre_id %>
  <h4>資格名</h4>
  <%= f.text_field :qualification_name %>
  <h4>URL</h4>
  <%= f.text_field :url %>

  <%= f.submit '投稿' %>
<% end %>